<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>List</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <div class="class" id="heading">
        <h1>
            <%=listTitle%>
        </h1>
    </div>

    <div class="box">

       <% newItems.forEach(function(item){ %>
        <form action="/delete" method="post">
            <div class="item">

                <input type="checkbox" onChange="this.form.submit()" name="checkbox" value="<%=item._id%>">
                <p>
                    <%= item.name %>
                </p>
            </div>
            <input type="hidden" name="hiddenInput" value="<%=listTitle%>">
        </form>
        <% }); %> 

   


                <form class="item" action="/" , method="post">
                    <input type="text" , name="firstInput" , placeholder="New item" autocomplete="off">
                    <button type="submit" name="list" value="<%=listTitle%>">+</button>
                </form>
    </div>




</body>

</html>
